[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    .ruff_cache
max-complexity = 10
ignore =
    E203,
    E501,
    W503,
per-file-ignores =
    __init__.py:F401
    examples/*:E402,F401
    tests/*:E402
